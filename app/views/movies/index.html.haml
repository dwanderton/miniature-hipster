-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, {:method => :get, :id => "ratings_form"} do
  Include: 
  - @all_ratings.each do |rating|
    = rating    
    - if @ratings_sel.include? rating
      = check_box_tag("ratings[#{rating}]", value = 1, checked = true)
    - else
      = check_box_tag("ratings[#{rating}]", value = 0, checked = false)
  = submit_tag 'Refresh', :id =>"ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if @order == "title")}= link_to "Movie Title", {:action =>"index", :order=> "title"}, :id => "title_header"
      %th Rating
      %th{:class => ("hilite" if @order == "release_date")}= link_to "Release Date", {:action =>"index", :order=> "release_date"}, :id=> "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
